#include<iostream>

struct Edge{

	int src;
	int dst;
};

class Graph{

	int V,E;
	Edge *edge;
public:
	Graph(int V, int E){
		this->V = V;
		this->E = E;
		edge = (Edge*) new Edge[E];
	}
	void printEdges();
};

void Graph::printEdges(){

	std::cout<<"Edge 0:"<<edge[0].src <<edge[0].dst;
	std::cout<<"Edge 1:"<<edge[1].src <<edge[1].dst;
	std::cout<<"Edge 2:"<<edge[2].src <<edge[2].dst;

}

int main(){

	Graph* g = (Graph*) new Graph(3,3);
	g->edge[0].src = 0;
	g->edge[0].dst = 1;
	g->edge[1].src = 1;
	g->edge[1].dst = 2;
	g->edge[2].src = 2;
	g->edge[2].dst = 0;
	g->printEdges();

}

